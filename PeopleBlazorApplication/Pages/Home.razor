@page "/"

<PageTitle>Home</PageTitle>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management System</title>
    <style>
        /* Overall page background */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #f9faf2, #4e5c6e);
            color: white;
            text-align: center;
        }

        /* Header styling */
        h1 {
            font-size: 4em;
            margin-top: 50px;
            text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.2);
        }

        /* Welcome message styling */
        .welcome-message {
            font-size: 1.5em;
            margin-top: 20px;
            font-weight: bold;
        }

        /* Container for content */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 50px 20px;
        }

    </style>
</head>
<body>

    <div class="container">
        <h1>Hello, User!</h1>
        <p class="welcome-message">Welcome to the User Management System</p>
    </div>
</body>
</html>
